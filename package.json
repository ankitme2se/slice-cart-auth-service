{
    "name": "slice-cart-auth-service",
    "version": "1.0.0",
    "description": "This is the user management service for the slice-cart project",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "NODE_OPTIONS='--loader ts-node/esm' nodemon src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "format-fix": "prettier . --write",
        "format-check": "prettier --check .",
        "lint-check": "eslint .",
        "lint-fix": "eslint . --fix",
        "test": "echo \"Error: no test specified\" && exit 1",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format-fix",
            "npm run lint-fix"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ankitme2se/slice-cart-auth-service.git"
    },
    "author": "Ankit Kumar <ankitme2se@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/ankitme2se/slice-cart-auth-service/issues"
    },
    "homepage": "https://github.com/ankitme2se/slice-cart-auth-service#readme",
    "devDependencies": {
        "@eslint/js": "^9.37.0",
        "@types/node": "^24.9.0",
        "@types/winston": "^2.4.4",
        "eslint": "^9.37.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.4",
        "nodemon": "^3.1.10",
        "prettier": "3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.0"
    },
    "dependencies": {
        "@types/express": "^5.0.3",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "winston": "^3.18.3"
    }
}
